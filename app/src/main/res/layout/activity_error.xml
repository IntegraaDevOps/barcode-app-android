<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ErrorActivity"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/button_pulisci_errori"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pulisci errori"
            android:textSize="12sp"
            android:background="#C41E3A"
            android:layout_margin="20dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textview_conteggio_errori"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NÂ°. Errori "
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/listView_errori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>